{% sw_extends '@Storefront/storefront/utilities/icon.html.twig' %}

{% block utilities_icon %}

    {% set styles = [ size, color, rotation, flip, class ] %}

    {% if pack is not defined %}
        {% set pack = 'default' %}
    {% endif %}

    {% if namespace is not defined %}
        {% set namespace = 'Storefront' %}
    {% endif %}

    <span class="icon icon-{{ name }}{% for entry in styles %}{% if entry != "" %} icon-{{ entry }}{% endif %}{% endfor %}">

        {% if name in [
            'arrow-medium-left',
            'arrow-head-left',
            'arrow-medium-right',
            'arrow-head-right',
            'arrow-head-left',
            'arrow-head-up',
            'arrow-medium-double-left',
            'arrow-medium-double-right',
            'arrow-medium-down',
            'arrow-right',
            'arrow-up',
            'avatar',
            'bag',
            'cart',
            'checkmark-circle',
            'checkmark',
            'envelope',
            'heart',
            'help',
            'info',
            'phone',
            'plus',
            'search',
            'sm-facebook',
            'sm-instagram',
            'sm-pinterest',
            'sm-twitter',
            'sm-skype',
            'sm-whatsapp',
            'sm-youtube',
            'sorting',
            'star',
            'trash',
            'x'
        ] %}
            <svg>
            <use xlink:href="#tabten-norii-{{ name }}" />
        </svg>
        {% else %}
            {{ source('@' ~ namespace ~ '/../app/storefront/dist/assets/icon/'~ pack ~'/'~ name ~'.svg', ignore_missing = true) }}
        {% endif %}
    </span>

{% endblock %}