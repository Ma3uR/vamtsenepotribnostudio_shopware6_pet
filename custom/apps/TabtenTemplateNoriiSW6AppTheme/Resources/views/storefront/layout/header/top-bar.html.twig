{% sw_extends '@Storefront/storefront/layout/header/top-bar.html.twig' %}


{% block layout_header_top_bar %}
    <div class="top-bar">
        <nav class="top-bar-nav">

            {% block norii_topbar_usps %}
                <div class="norii-topbar-usps swiper-container">
                    <div class="swiper-wrapper">
                    {% block norii_topbar_usp_item_01 %}
                        <div class="norii-topbar-usp-item swiper-slide">
                            {{ "tabten-norii.usps.usp01"|trans|sw_sanitize }}
                        </div>
                    {% endblock %}
                    {% block norii_topbar_usp_item_02 %}
                        <div class="norii-topbar-usp-item swiper-slide">
                            {{ "tabten-norii.usps.usp02"|trans|sw_sanitize }}
                        </div>
                    {% endblock %}
                    {% block norii_topbar_usp_item_03 %}
                        <div class="norii-topbar-usp-item swiper-slide">
                            {{ "tabten-norii.usps.usp03"|trans|sw_sanitize }}
                        </div>
                    {% endblock %}
                        {% block norii_topbar_usp_item_04 %}
                            <div class="norii-topbar-usp-item swiper-slide">
                                {{ "tabten-norii.usps.usp04"|trans|sw_sanitize }}
                            </div>
                        {% endblock %}
                    </div>
                </div>
            {% endblock %}

            {% block layout_header_top_bar_language %}
                {% sw_include '@Storefront/storefront/layout/header/actions/language-widget.html.twig' %}
            {% endblock %}

            {% block layout_header_top_bar_currency %}
                {% sw_include '@Storefront/storefront/layout/header/actions/currency-widget.html.twig' %}
            {% endblock %}

            {% block layout_header_top_bar_service %}
                {% sw_include '@Storefront/storefront/layout/header/actions/service-menu-widget.html.twig' %}
            {% endblock %}
        </nav>
    </div>
{% endblock %}


